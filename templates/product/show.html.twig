{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}

<div class="container">
    <h1>Products</h1>
    <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
          </tr>
        </thead>
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.category.name }}</td>
            </tr>
            <tr>
              <td>
                {% if product.image %}
                  <img style="width: 200px;" src="{{ asset('product_images/'~ product.image) }}" alt="{{ product.name }}">
                {% else %}
                  <img style="width: 200px;" src="{{ asset('product_images/dummy_product_image.jpg') }}" alt="{{ product.name }}">
                {% endif %}
              </td>
              <td colspan="2">{{ product.description }}</td>
            </tr>
    </table>
</div>
{% endblock %}
